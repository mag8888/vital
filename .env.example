# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB_NAME=em2_game

# JWT Configuration
JWT_SECRET=your-secret-key-here

# Server Configuration
PORT=8080
NODE_ENV=production

# Bot & Webapp (для реферальных ссылок и кнопки «Перейти в мини-приложение»)
# BOT_USERNAME — без @; должен совпадать с username бота в Telegram (иначе реф. ссылка ведёт не туда)
BOT_USERNAME=PLAZMA_test8_bot
WEBAPP_BASE_URL=https://plazma.up.railway.app/webapp
PUBLIC_BASE_URL=https://plazma.up.railway.app

# Админ: ID Telegram через запятую (для доступа в боте и загрузки фото)
ADMIN_CHAT_ID=123456789

# Cloudinary (для загрузки фото админом и картинок товаров)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
# Папка с аудио для «Звуковые матрицы» (найти: node scripts/list-cloudinary-audio.js)
CLOUDINARY_AUDIO_FOLDER=

