// Полный перенос Vital + данные Plazma (совместимость: опциональные поля Product/Category, модели Plazma)
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// Enums are not natively supported in SQLite, Prisma simulates them.
// We keep them defined here for Prisma Client types.

model User {
  id              String            @id @default(uuid())
  telegramId      String            @unique
  firstName       String?
  lastName        String?
  username        String?
  languageCode    String?
  phone           String?
  // Region enum is treated as String in SQLite underlying, handled by Prisma
  selectedRegion  String?           @default("RUSSIA") 
  deliveryAddress String?
  balance         Float             @default(0)
  cartItems       CartItem[]
  histories       UserHistory[]
  partner         PartnerProfile?
  orders          OrderRequest[]
  giftCertificates GiftCertificate[]
  referrals       PartnerReferral[] @relation("UserReferrals")
  payments        Payment[]
  balanceTopups   BalanceTopUpRequest[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([createdAt])
}

model BalanceTopUpRequest {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String   
  amountRub  Float?
  receiptUrl String
  status     String   @default("PENDING")
  adminNote  String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId, status, createdAt])
  @@index([status, createdAt])
}

model UserHistory {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   
  action    String
  payload   String?  // SQLite doesn't support Json, store as String
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([action])
}

model Category {
  id                String    @id @default(uuid())
  name              String
  slug              String    @unique
  description       String?
  imageUrl          String?
  isVisibleInWebapp Boolean?  @default(true)
  isActive          Boolean   @default(true)
  products          Product[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Product {
  id                String     @id @default(uuid())
  title             String
  summary           String
  description       String?
  instruction       String?
  imageUrl          String?
  price             Float
  purchasePrice     Float?
  sku               String?
  stock             Int        @default(999)
  lowStockThreshold Int?       @default(3)
  isActive          Boolean    @default(true)
  availableInRussia Boolean   @default(true)
  availableInBali   Boolean   @default(true)
  category          Category   @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId        String     
  cartItems         CartItem[]
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt

  @@index([isActive, categoryId])
  @@index([createdAt])
  @@index([sku])
  @@index([stock])
}

model CertificateType {
  id          String   @id @default(uuid())
  title       String
  description String?
  imageUrl    String?
  valueRub    Int
  priceRub    Int
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  certificates GiftCertificate[]

  @@index([isActive, sortOrder])
}

model GiftCertificate {
  id           String           @id @default(uuid())
  code         String           @unique
  type         CertificateType? @relation(fields: [typeId], references: [id])
  typeId       String?          
  user         User?            @relation(fields: [userId], references: [id])
  userId       String?          
  initialPz    Float
  remainingPz  Float
  status       String           @default("ACTIVE")
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  @@index([userId, status])
  @@index([status, createdAt])
}

model Specialist {
  id            String   @id @default(uuid())
  name          String
  specialty     String
  categoryId    String?  
  specialtyId   String?  
  category      SpecialistCategory? @relation(fields: [categoryId], references: [id])
  specialtyRef  SpecialistSpecialty? @relation(fields: [specialtyId], references: [id])
  photoUrl      String?
  profile       String?
  about         String?
  services      SpecialistService[]
  messengerUrl  String?
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([isActive, specialty])
  @@index([sortOrder, createdAt])
  @@index([categoryId, specialtyId])
}

model SpecialistCategory {
  id        String   @id @default(uuid())
  name      String   @unique
  isActive  Boolean  @default(true)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  specialties SpecialistSpecialty[]
  specialists Specialist[]

  @@index([isActive, sortOrder])
}

model SpecialistSpecialty {
  id          String   @id @default(uuid())
  name        String
  category    SpecialistCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId  String   
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  specialists Specialist[]

  @@unique([categoryId, name])
  @@index([isActive, categoryId, sortOrder])
}

model SpecialistService {
  id           String   @id @default(uuid())
  specialist   Specialist @relation(fields: [specialistId], references: [id], onDelete: Cascade)
  specialistId String   
  title        String
  description  String?
  format       String?
  durationMin  Int?
  detailsUrl   String?
  priceRub     Int
  sortOrder    Int      @default(0)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([specialistId, isActive, sortOrder])
}

model CartItem {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String   
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([userId])
}

model OrderRequest {
  id        String   @id @default(uuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?  
  contact   String?
  message   String
  itemsJson String   // SQLite no Json
  status    String   @default("NEW")
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
  @@index([status])
}

model PartnerProfile {
  id             String               @id @default(uuid())
  user           User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String               @unique 
  isActive       Boolean              @default(false)
  activatedAt    DateTime?
  expiresAt      DateTime?
  activationType String?
  programType    String               @default("DIRECT") // Enum as String
  referralCode   String               @unique
  balance        Float                @default(0)
  bonus          Float                @default(0)
  totalPartners  Int                  @default(0)
  directPartners Int                  @default(0)
  multiPartners  Int                  @default(0)
  referrals      PartnerReferral[]
  transactions   PartnerTransaction[]
  activationHistory PartnerActivationHistory[]
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt
}

model PartnerReferral {
  id           String             @id @default(uuid())
  profile      PartnerProfile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId    String             
  referredId   String?            
  referred     User?              @relation("UserReferrals", fields: [referredId], references: [id])
  contact      String?
  level        Int
  referralType String             @default("DIRECT") // Enum as String
  createdAt    DateTime           @default(now())

  @@index([profileId])
  @@index([referredId])
}

model PartnerTransaction {
  id          String          @id @default(uuid())
  profile     PartnerProfile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId   String          
  amount      Float
  type        String // Enum as String
  description String
  createdAt   DateTime        @default(now())

  @@index([profileId, createdAt])
}

model PartnerActivationHistory {
  id              String          @id @default(uuid())
  profile         PartnerProfile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  profileId       String          
  action          String
  activationType  String?
  reason          String?
  expiresAt       DateTime?
  adminId         String?
  createdAt       DateTime        @default(now())

  @@index([profileId])
  @@index([createdAt])
}

model Review {
  id        String   @id @default(uuid())
  name      String
  photoUrl  String?
  content   String
  link      String?
  isPinned  Boolean  @default(false)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AudioFile {
  id          String   @id @default(uuid())
  title       String
  description String?
  fileId      String
  duration    Int?
  fileSize    Int?
  mimeType    String?
  isActive    Boolean  @default(true)
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MediaFile {
  id          String   @id @default(uuid())
  title       String
  description String?
  url         String
  type        String
  fileSize    Int?
  mimeType    String?
  isActive    Boolean  @default(true)
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BotContent {
  id          String   @id @default(uuid())
  key         String   @unique
  title       String
  content     String
  description String?
  category    String?
  isActive    Boolean  @default(true)
  language    String   @default("ru")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model MessageTemplate {
  id        String   @id @default(uuid())
  name      String
  subject   String
  text      String
  photoUrl  String?
  buttons   String? // SQLite no Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id         String        @id @default(uuid())
  userId     String        
  user       User          @relation(fields: [userId], references: [id])
  orderId    String        @unique
  invoiceId  String        @unique
  amount     Float
  currency   String        @default("RUB")
  status     String        @default("PENDING") // Enum as string
  paymentUrl String?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  @@index([userId, createdAt])
  @@index([status])
}

model Settings {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
